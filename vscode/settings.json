{
    // Look
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "GitHub Dark Default",
    "workbench.iconTheme": "material-icon-theme",

    // General
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,

    // Editor
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.experimental.showMoves": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "JetBrains Mono", // "'JetBrainsMono Nerd Font'",
    "editor.fontLigatures": true,
    "editor.guides.bracketPairs": "active",
    "editor.guides.indentation": true,
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.guides.highlightActiveIndentation": "always",
    "editor.guides.highlightActiveBracketPair": true,
    "editor.letterSpacing": 0.4,
    "editor.mouseWheelZoom": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.unicodeHighlight.invisibleCharacters": true,
    "editor.detectIndentation": true,
    "editor.tabSize": 4,
    "editor.linkedEditing": true,
    "editor.inlineSuggest.enabled": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.formatOnPaste": true,
    "editor.showFoldingControls": "always",
    "search.showLineNumbers": true,
    "search.smartCase": true,

    // Explorer
    "explorer.excludeGitIgnore": true,
    "explorer.incrementalNaming": "smart",

    // Workbench
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground" : "#60161600",
        "editor.lineHighlightBorder"     : "#6e0606",
        "tree.indentGuidesStroke"        : "#2c5eca",
        "tree.inactiveIndentGuidesStroke": "#5b5d61",
    },

    "workbench.sideBar.location": "right",
    "workbench.tree.indent": 25,
    "workbench.tree.enableStickyScroll": true,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.list.smoothScrolling": true,

    // Terminal
    "terminal.integrated.allowChords": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.enableImages": true,
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.middleClickBehavior": "paste",
    "terminal.integrated.mouseWheelZoom": true,
    "terminal.integrated.scrollback": 10000000,
    "terminal.integrated.shellIntegration.history": 10000000,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.tabs.location": "right",

    // Misc./Other
    "telemetry.telemetryLevel": "off",

    // Generic plugins
    "todohighlight.keywords": [
        {
            "backgroundColor": "#5c0c0c",
            "border": "2px solid red",
            "borderRadius": "4px",
            "color": "red",
            "text": "TODO:"
        },
        {
            "backgroundColor": "#054a39",
            "border": "2px solid #1bb58f",
            "borderRadius": "4px",
            "color": "#1bb58f",
            "overviewRulerColor": "grey",
            "text": "NOTE:"
        },
        {
            "backgroundColor": "#091a6e",
            "border": "2px solid #1b7db5",
            "borderRadius": "4px",
            "color": "#1b7db5",
            "overviewRulerColor": "grey",
            "text": "TOCHANGE:"
        },
    ],
    "terminal.integrated.fontSize": 15,
}